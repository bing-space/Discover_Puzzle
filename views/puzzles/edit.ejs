<% layout('layouts/boilerplate') %>
    <div class="card w-75" style="margin: 0 auto;">
        <div class="card-body">
            <h1>Edit Puzzle</h1>

            <form action="/puzzles/<%= puzzle._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%= puzzle.title %>">
                </div>
                <div class="mb-3">
                    <label for="piece" class="form-label">Piece</label>
                    <input type="number" name="piece" id="piece" class="form-control" value="<%= puzzle.piece %>">
                </div>
                <div class="mb-3">
                    <label for="size" class="form-label">Size / Dimensions </label>
                    <input type="text" name="size" id="size" class="form-control" value="<%= puzzle.size %>">
                </div>
                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Image URL </label>
                    <input type="text" name="imageUrl" id="imageUrl" class="form-control"
                        value="<%= puzzle.imageUrl %>">
                </div>
                <div class="mb-3">
                    <label for="manufacturer" class="form-label">Manufacturer</label>
                    <input type="text" name="manufacturer" id="manufacturer" class="form-control"
                        value="<%= puzzle.manufacturer %>">
                </div>
                <div class="mb-3">
                    <label for="keyword" class="form-label">Puzzle Keywords(Separate by Space)</label>
                    <input type="text" name="keyword" id="keyword" class="form-control" value="<%= puzzle.keyword %>">
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
                <div class="mb-3 text-center">
                    <a href="/puzzles/<%=puzzle._id%>">Back to Puzzle Show Page</a>
                </div>
            </form>
        </div>
    </div>